<Defs>
	<HediffDef>
		<defName>Vertical_FireTrail_Hediff</defName>
		<label>Vertical_FireTrail_Hediff</label>

		<hediffClass>HediffWithComps</hediffClass>
		<description>trail leaver</description>

		<!-- <labelNoun>HeDiff.labelNoun whatever</labelNoun> -->

		<comps>
			<li Class="MoharHediffs.HediffCompProperties_TrailLeaver">
				<period>15~25</period>

				<motePool>
					<li>Fire01_AnimatedMote</li>
					<li>Fire02_AnimatedMote</li>
					<li>Fire03_AnimatedMote</li>
					<li>Fire04_AnimatedMote</li>
					<li>Fire05_AnimatedMote</li>
					<li>Fire06_AnimatedMote</li>
				</motePool>

				<offSetPerBodyType>
					<li>
						<bodyType>Fat</bodyType>
						<offset>(0,0,-.41)</offset>
					</li>
					<li>
						<bodyType>Female</bodyType>
						<offset>(0,0,-.39)</offset>
					</li>
					<li>
						<bodyType>Hulk</bodyType>
						<offset>(0,0,-.6)</offset>
					</li>
					<li>
						<bodyType>Male</bodyType>
						<offset>(0,0,-.34)</offset>
					</li>
					<li>
						<bodyType>Thin</bodyType>
						<offset>(0,0,-.31)</offset>
					</li>
				</offSetPerBodyType>

				<restriction>
					<onlyWhenMoving>true</onlyWhenMoving>
					<allowedPostures>
						<li>Standing</li>
					</allowedPostures>
					<!-- LayingOnGroundFaceUp, LayingOnGroundNormal, LayingInBed-->
					<terrain>
						<allowedInWater>false</allowedInWater>
						<allowedSnowDepth>0~.4</allowedSnowDepth>
						<!-- <forbiddenTerrains></forbiddenTerrains> -->
					</terrain>
				</restriction>

				<randomScale>.75~1.25</randomScale>
				<dynamicRotation>false</dynamicRotation>
				<!-- <debug>true</debug> -->
			</li>
		</comps>
	</HediffDef>
