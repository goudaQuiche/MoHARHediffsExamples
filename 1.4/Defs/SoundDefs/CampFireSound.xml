<Defs>

	<SoundDef>
		<defName>CampFire_Sustain_Sound</defName>  

		<sustain>True</sustain>  
		<context>MapOnly</context>
		<priorityMode>PrioritizeNearest</priorityMode>  
		<sustainFadeoutTime>1</sustainFadeoutTime>  
		<subSounds>
			<li>
				<muteWhenPaused>True</muteWhenPaused>
				<grains>
					<li Class="AudioGrain_Clip">
						<clipPath>Interact/Work/CampFire/Burning</clipPath>
					</li>
				</grains>      
				<volumeRange>13~17</volumeRange>      
				<pitchRange>0.85~1.15</pitchRange>          
				<sustainLoopDurationRange>2.4~0.98</sustainLoopDurationRange>
				<sustainIntervalRange>-0.323~-0.33</sustainIntervalRange>      
				<sustainAttack>0.06</sustainAttack>      
				<sustainRelease>0.48</sustainRelease>
			</li>
		</subSounds>
	</SoundDef>

