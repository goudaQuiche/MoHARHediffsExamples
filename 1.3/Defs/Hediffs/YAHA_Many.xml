<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!---->	
	<HediffDef ParentName="HiddenHediffBase">
		<defName>YAHA_drunkenMonk</defName>
		<hediffClass>HediffWithComps</hediffClass>

		<description>apply multiple hediff if drafted</description>
		<label>YAHA_drunkenMonk</label>
		<labelNoun>YAHA_drunkenMonk.labelNoun</labelNoun>

		<isBad>false</isBad>

		<comps>
			<li Class="YAHA.HediffCompProperties_YetAnotherHediffApplier">
				<associations>
					<li>
						<hediffPool>
							<li><hediff>AlcoholHigh</hediff><severity>.15~.2</severity></li>
							<li><hediff>GoJuiceHigh</hediff><severity>.15~.2</severity></li>
						</hediffPool>

						<condition>IsDraftedCondition</condition>
						
						<specifics>
							<applyNumLimit>-1</applyNumLimit>
							<removeIfFalse>true</removeIfFalse>
						</specifics>

					</li>
				</associations>

				<checkFrequency>300</checkFrequency>
				<debug>true</debug>
			</li>
		</comps>
	</HediffDef>
</Defs>
