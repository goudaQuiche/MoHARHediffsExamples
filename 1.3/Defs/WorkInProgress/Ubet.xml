<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<!-- isPawn && ( HumanlikeAdult && Spring && ((isMale && isDrafted ) || (isFemale && isUndrafted ))) -->
	<Ubet.UbetDef>
		<defName>LifeStageSeasonDraftedGender</defName>
		<trunk>
			<initialCondition>
				<type>isPawn</type>
			</initialCondition>

			<!-- and is implied for initial condition; 
			it is not even evaluated since processing is stopped is condition is not met
			<operand>and</operand> -->

			<leaf>
				<li>
					<operand>and</operand>
					<leaf>
						<li>
							<condition>
								<type>belongsToLifeStage</type>
								<parameter>
									<li>HumanlikeAdult</li>
								</parameter>
							</condition>
						</li>
						<li>
							<condition>
								<type>isOnMapWithSeason</type>
								<parameter>
									<li>Spring</li>
								</parameter>
							</condition>
						</li>
						<li>
							<operand>or</operand>
							<leaf>
								<li>
									<operand>and</operand>
									<leaf>
										<li>
											<condition>
												<type>isMale</type>
											</condition>
										</li>
										<li>
											<condition>
												<type>isDrafted</type>
											</condition>
										</li>
									</leaf>
								</li>
								<li>
									<operand>and</operand>
									<leaf>
										<li>
											<condition>
												<type>isFemale</type>
											</condition>
										</li>
										<li>
											<condition>
												<type>isUndrafted</type>
											</condition>
										</li>
									</leaf>
								</li>
							</leaf>
						</li>
					</leaf>
				</li>

			</leaf>
		</trunk>
	</Ubet.UbetDef>
	
	<!-- isPawn && ( Has alive Spouse && in map with Clear Weather ) -->
	<Ubet.UbetDef>
		<defName>RelationWeather</defName>
		<trunk>
			<initialCondition>
				<type>isPawn</type>
			</initialCondition>
			<leaf>
				<li>
					<operand>and</operand>
					<leaf>
						<li>
							<condition>
								<type>hasAliveRelation</type>
								<parameter>
									<li>Spouse</li>
								</parameter>
							</condition>
						</li>
						<li>
							<condition>
								<type>isOnMapWithWeather</type>
								<parameter>
									<li>Clear</li>
								</parameter>
							</condition>
						</li>
					</leaf>
				</li>
			</leaf>
		</trunk>
	</Ubet.UbetDef>

	<!-- isPawn && ( Has nose && Wears apparel made of synthread ) -->
	<Ubet.UbetDef>
		<defName>BodyPartApparel</defName>
		<trunk>
			<initialCondition>
				<type>isPawn</type>
			</initialCondition>
			<leaf>
				<li>
					<operand>and</operand>
					<leaf>
						<li>
							<operand>not</operand>
							<condition>
								<type>hasBodyPart</type>
								<parameter>
									<li>Nose</li>
								</parameter>
							</condition>
						</li>
						<li>
							<condition>
								<type>wearsApparelMadeOf</type>
								<parameter>
									<li>Synthread</li>
								</parameter>
							</condition>
						</li>
					</leaf>
				</li>
			</leaf>
		</trunk>
	</Ubet.UbetDef>
	
	<Ubet.UbetDef>
		<defName>IsDraftedCondition</defName>
		<trunk>
			<initialCondition>
				<type>isDrafted</type>
			</initialCondition>
		</trunk>
	</Ubet.UbetDef>
</Defs>