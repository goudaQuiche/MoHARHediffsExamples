	<!-- blue-->	
	<HediffDef>
		<defName>Hediff_IntensePurpleTrail</defName>

		<hediffClass>HediffWithComps</hediffClass>
		<description>trail leaver</description>
		<label>trail intense purple</label>
		<labelNoun>Tell me if you see this slugHeDiff.labelNoun</labelNoun>

		<comps>
			<li Class="MoharHediffs.HediffCompProperties_TrailLeaver">
				<period>10</period>

				<motePool>
					<li>Mote_PuddlePA</li>
					<li>Mote_PuddlePB</li>
					<li>Mote_PuddlePC</li>
				</motePool>

				<offSetPerBodyType>
					<li>
						<bodyType>Fat</bodyType>
						<offset>(0,0,-.41)</offset>
					</li>
					<li>
						<bodyType>Female</bodyType>
						<offset>(0,0,-.39)</offset>
					</li>
					<li>
						<bodyType>Hulk</bodyType>
						<offset>(0,0,-.6)</offset>
					</li>
					<li>
						<bodyType>Male</bodyType>
						<offset>(0,0,-.34)</offset>
					</li>
					<li>
						<bodyType>Thin</bodyType>
						<offset>(0,0,-.31)</offset>
					</li>
				</offSetPerBodyType>

				<useColorRange>true</useColorRange>
				<colorRange>
					<colorA>(255, 0, 64)</colorA>
					<colorB>(128, 0, 255)</colorB>
					
					<variationPerIteration>.2</variationPerIteration>
				</colorRange>

				<scale>.6~.9</scale>

				<!-- <debug>true</debug> -->
			</li>
		</comps>
	</HediffDef>

